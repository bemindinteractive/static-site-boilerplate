<% wrap_layout :layout do %>

    <!-- Check if a body content is passed -->
    <% if content_for?(:header) %>
      <%= yield_content :header %>
    <% end %>

    <!-- Check if a body content is passed -->
    <% if content_for?(:body) %>
      <%= yield_content :body %>
    <% end %>

    <!-- Check if a footer content is passed -->
    <% if content_for?(:footer) %>
      <%= yield_content :footer %>
    <% end %>

<% end %>
